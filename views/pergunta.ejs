<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %> 
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2><%= pergunta.titulo %></h2>
                <p><%= pergunta.descricao %></p>
                <hr>
                <form method="POST" action="/responder">
                    <label><h3>Responda</h3></label>
                    <textarea placeholder="Digite sua resposta.." class="form-control" name="corpo"></textarea><br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
                <hr>
                <br>
                <h3>Respostas</h3> 
                <hr>
                <% respostas.forEach(resposta => {%>
                    <div class="card">
                        <div class="card-body">
                            <%= resposta.corpo %> 
                        </div>
                    </div><br>
                <% }) %> 
            </div>
        </div>

    </div>


</body>
<%- include('./partials/footer.ejs') %> 